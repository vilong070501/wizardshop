{% extends 'base.html.twig' %}

{% block title %}Your addresses{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/address.css') }}">
{% endblock %}

{% block body %}
    <div class="address-container">
        <h2>Addresses</h2>
        <div class="forms-container">
            {% for form in addressesForms %}
                {{ form_start(form, {'attr': {'id': 'address_form_' ~ loop.index}}) }}
                <div class="address-update-form">
                    <h5 class="fw-bold">{{ form.vars.value.title }}</h5>
                    <div class="d-none">
                        {{ form_widget(form.title) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.firstname) }}
                        <p>
                            {{ form_widget(form.firstname, { 'attr': {'class': 'form-control'} }) }}
                        </p>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.lastname) }}
                        <p>
                            {{ form_widget(form.lastname, { 'attr': {'class': 'form-control'} }) }}
                        </p>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.company) }}
                        <p>
                            {{ form_widget(form.company, { 'attr': {'class': 'form-control'} }) }}
                        </p>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.address) }}
                        <p>
                            {{ form_widget(form.address, { 'attr': {'class': 'form-control'} }) }}
                        </p>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.zipCode) }}
                        <p>
                            {{ form_widget(form.zipCode, { 'attr': {'class': 'form-control'} }) }}
                        </p>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.city) }}
                        <p>
                            {{ form_widget(form.city, { 'attr': {'class': 'form-control'} }) }}
                        </p>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.country) }}
                        <p>
                            {{ form_widget(form.country, { 'attr': {'class': 'form-control'} }) }}
                        </p>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.phone) }}
                        <p>
                            {{ form_widget(form.phone, { 'attr': {'class': 'form-control'} }) }}
                        </p>
                    </div>
                    <div class="d-flex justify-content-center align-items-center mt-4" style="max-width: 50%">
                        <button type="submit" class="btn btn-primary btn-update">Update</button>
                    </div>
                </div>
                {{ form_end(form, {'attr': {'id': 'address_form_' ~ loop.index}}) }}
            {% endfor %}
        </div>
        <div class="align-items-center" style="max-width: 50%">
            <a href="{{ path('address_add') }}" class="btn btn-primary btn-update">Add a new address</a>
        </div>
    </div>
{% endblock %}
