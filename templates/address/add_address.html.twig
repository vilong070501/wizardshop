{% extends 'base.html.twig' %}

{% block title %}Add new address{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/address.css') }}">
{% endblock %}

{% block body %}
    <div class="address-container" style="max-width: 40%">
        <h2>Add a new address</h2>
        <div class="forms-container">
            {{ form_start(form) }}
            <div class="address-update-form">
                <div class="form-group">
                    {{ form_label(form.title) }}
                    <p>
                        {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
                    </p>
                </div>
                <div class="form-group">
                    {{ form_label(form.firstname) }}
                    <p>
                        {{ form_widget(form.firstname, { 'attr': {'class': 'form-control'} }) }}
                    </p>
                </div>
                <div class="form-group">
                    {{ form_label(form.lastname) }}
                    <p>
                        {{ form_widget(form.lastname, { 'attr': {'class': 'form-control'} }) }}
                    </p>
                </div>
                <div class="form-group">
                    {{ form_label(form.company) }}
                    <p>
                        {{ form_widget(form.company, { 'attr': {'class': 'form-control'} }) }}
                    </p>
                </div>
                <div class="form-group">
                    {{ form_label(form.address) }}
                    <p>
                        {{ form_widget(form.address, { 'attr': {'class': 'form-control'} }) }}
                    </p>
                </div>
                <div class="form-group">
                    {{ form_label(form.zipCode) }}
                    <p>
                        {{ form_widget(form.zipCode, { 'attr': {'class': 'form-control'} }) }}
                    </p>
                </div>
                <div class="form-group">
                    {{ form_label(form.city) }}
                    <p>
                        {{ form_widget(form.city, { 'attr': {'class': 'form-control'} }) }}
                    </p>
                </div>
                <div class="form-group">
                    {{ form_label(form.country) }}
                    <p>
                        {{ form_widget(form.country, { 'attr': {'class': 'form-control'} }) }}
                    </p>
                </div>
                <div class="form-group">
                    {{ form_label(form.phone) }}
                    <p>
                        {{ form_widget(form.phone, { 'attr': {'class': 'form-control'} }) }}
                    </p>
                </div>
                <div class="d-flex justify-content-center align-items-center mt-4" style="max-width: 100px">
                    <button type="submit" class="btn btn-primary btn-update">Save</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
